<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto mb-3 d-flex justify-content-end">
      <form action="/restaurants/{{{restaurant.id}}}?_method=PUT" method="POST" class="needs-validation" novalidate>
        <div class="form-row">
          <div class="col-md-5 mb-3 mr-3">
            <label for="name">餐廳名*</label>
            <input type="text" class="form-control" placeholder="name" name="name" id="name"
              value="{{{restaurant.name}}}" required>
            <div class="valid-feedback">
              Looks good!
            </div>
            <div class="invalid-feedback">
              Please provide a name.
            </div>
          </div>
          <div class="col-md-5">
            <label for="name_en">餐廳英文名</label>
            <input type="text" class="form-control" placeholder="english name" name="name_en"
              value="{{{restaurant.name_en}}}">
          </div>
          <div class="col-md-5 mb-3 mr-3">
            <label for="category">餐廳種類</label>
            <input type="text" class="form-control" placeholder="category" name="category"
              value="{{{restaurant.category}}}">
          </div>
          <div class="col-md-5 mb-3">
            <label for="image">圖片連結</label>
            <input type="text" class="form-control" placeholder="image link" name="image"
              value="{{{restaurant.image}}}">
          </div>
          <div class="col-md-5 mb-3 mr-3">
            <label for="location">地址</label>
            <input type="text" class="form-control" placeholder="location" name="location"
              value="{{{restaurant.location}}}">
          </div>
          <div class="col-md-5 mb-3">
            <label for="phone">電話</label>
            <input type="text" class="form-control" placeholder="phone number" name="phone"
              value="{{{restaurant.phone}}}">
          </div>
          <div class="col-md-5 mb-3 mr-3">
            <label for="google-map">google map</label>
            <input type="text" class="form-control" placeholder="google map link" name="google_map"
              value="{{{restaurant.google_map}}}">
          </div>
          <div class="col-md-5 mb-3">
            <label for="rating">評分</label>
            <input type="text" class="form-control" placeholder="rating" name="rating" value="{{{restaurant.rating}}}">
          </div>
          <div class="col-md-10 mb-3">
            <label for="description">簡介</label>
            <textarea name="description" id="description" class="form-control" placeholder="description" cols="90"
              rows="5">{{restaurant.description}}</textarea>
          </div>
        </div>
        <button type="submit" class="btn btn-info">修改完成</button>
      </form>
    </div>
  </div>
</div>

<script>
  (function () {
    'use strict';
    window.addEventListener('load', function () {
      var forms = document.getElementsByClassName('needs-validation');
      var validation = Array.prototype.filter.call(forms, function (form) {
        form.addEventListener('submit', function (event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        }, false);
      });
    }, false);
  })();
</script>