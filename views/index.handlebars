<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container d-flex justify-content-between">
      <a class="navbar-brand" href="/">
        <img src="https://i.postimg.cc/JG2gFgJg/logo.png" width="30" height="30" class="d-inline-block align-top"
          alt="我的餐廳清單">
        我的餐廳清單
      </a>
      {{!-- 新增餐廳的按鈕 --}}
      <form action="/restaurants/new" method="GET">
        <button type="submit" class="btn btn-info">新增餐廳</button>
      </form>
    </div>
  </nav>

  <div class="banner"></div>
</header>

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" value="{{keyword}}" class="form-control" placeholder="輸入餐廳、分類"
            aria-label="Restaurant Name..." value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{this.id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

            </div>
            <div class="card-footer text-secondary d-flex justify-content-around align-items-center">
              <a href="/restaurants/{{{this.id}}}" class="badge badge-light">detail</a>
              <a href="/restaurants/{{{this.id}}}/edit" class="badge badge-light">edit</a>
              <form action="/restaurants/{{{this.id}}}/delete" method="POST">
                <button type="submit" class="btn btn-danger">
                  delete
                </button>
              </form>

            </div>
          </div>
        </a>


        {{/each}}
      </div>
    </div>
  </div>
</div>